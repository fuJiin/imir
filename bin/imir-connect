#!/bin/bash
set -euo pipefail

IMIR_ROOT="$(cd "$(dirname "$0")/.." && pwd)"
source "$IMIR_ROOT/config.env"
export HCLOUD_TOKEN

NAME="${1:?Usage: imir-connect <name>}"
SSH_KEY_PATH="${SSH_KEY_PATH/#\~/$HOME}"

IP=$(hcloud server ip "imir-$NAME" 2>/dev/null) || {
    echo "Error: dev box '$NAME' not found."
    echo "Run imir-list to see available boxes."
    exit 1
}

exec ssh -A -i "$SSH_KEY_PATH" -t dev@"$IP" 'TERM=xterm-256color tmux attach || TERM=xterm-256color tmux'
